<?xml version="1.0" encoding="utf-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>au.org.emii</groupId>
    <artifactId>geoserver</artifactId>
    <packaging>pom</packaging>
    <version>1.0.0</version>

    <name>AODN Geoserver (pom)</name>

    <modules>
        <!-- xslt included via profile --> 
        <module>src/geoserver/src/wfs</module> <!-- needed for csv output dep resolution --> 
        <module>src/geoserver/src/extension/wps/wps-core</module> <!-- activation by profile wont add gs-wps-core to reactor deps -->
        <module>src/geoserver/src/web</module>
        <module>src/geoserver-layer-filter-extension</module>
        <module>src/ncdfgenerator</module>
        <module>src/emii</module>
    </modules>

    <description>AODN Geoserver v${project.version}</description>
    <url>http://www.emii.org.au</url>

    <properties>
        <geoserver.version>2.7.0</geoserver.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.resources.sourceEncoding>${project.build.sourceEncoding}</project.resources.sourceEncoding>

    </properties>



    <!-- it's not possible to trigger a profile from a pom. must be explicit or in a custom settings.xml
    <profiles>
        <profile>
            <id>wps</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
        </profile>
   </profiles>

    -->



