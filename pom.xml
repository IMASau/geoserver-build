<?xml version="1.0" encoding="utf-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>au.org.emii</groupId>
    <artifactId>geoserver</artifactId>
    <packaging>war</packaging>
    <version>2.4.2</version>

    <name>AODN Geoserver</name>
    <description>AODN/IMOS Geoserver v${project.version} with XSLT, no GZip and CSV/metadata plugin.</description>
    <url>http://www.emii.org.au</url>

    <properties>
        <geoserver.group.id>org.geoserver</geoserver.group.id>
        <geoserver.artifact.id>geoserver</geoserver.artifact.id>
    </properties>

    <dependencies>

        <dependency>
            <groupId>${geoserver.group.id}</groupId>
            <artifactId>geoserver</artifactId>
            <version>${project.version}</version>
            <type>war</type>
        </dependency>

        <dependency>
            <groupId>${geoserver.group.id}</groupId>
            <artifactId>xslt</artifactId>
            <version>${project.version}</version>
            <scope>runtime</scope>
        </dependency>

        <dependency>
            <groupId>${geoserver.group.id}</groupId>
            <artifactId>main</artifactId>
            <version>${project.version}</version>
            <exclusions>
              <exclusion>
                <groupId>org.geotools</groupId>
                <artifactId>gt-jdbc</artifactId>
              </exclusion>
            </exclusions>
        </dependency>

        <dependency>
            <groupId>${geoserver.group.id}</groupId>
            <artifactId>wfs</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>org.geotools</groupId>
            <artifactId>gt-jdbc</artifactId>
            <version>10.2-imos</version>
        </dependency>

    </dependencies>

    <build>

        <resources>
            <resource>
                <directory>${basedir}/src/main/java</directory>
                <includes>
                    <include>applicationContext.xml</include>
                </includes>
            </resource>
        </resources>

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>2.4</version>
                <configuration>
                    <overlays>
                        <overlay>
                            <groupId>${geoserver.group.id}</groupId>
                            <artifactId>${geoserver.artifact.id}</artifactId>
                        </overlay>
                    </overlays>
                    <warName>${geoserver.artifact.id}-${project.version}-imos</warName>
                    <packagingExcludes>
                        **/WEB-INF/lib/gt-jdbc-10.2.jar
                    </packagingExcludes>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.1</version>
                <configuration>
                     <source>1.5</source>
                     <target>1.5</target>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <distributionManagement>
        <repository>
            <id>${internal.repository.id}</id>
            <url>${internal.repository.url}</url>
        </repository>
    </distributionManagement>

</project>
