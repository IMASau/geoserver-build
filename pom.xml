<?xml version="1.0" encoding="utf-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>au.org.emii</groupId>
    <artifactId>geoserver</artifactId>
    <packaging>war</packaging>
    <version>2.4.2</version>

    <name>AODN Geoserver</name>
    <description>AODN/IMOS Geoserver v2.4.2 with XSLT and no GZip</description>
    <url>http://www.emii.org.au</url>

    <properties>
        <geoserver.group.id>org.geoserver</geoserver.group.id>
        <geoserver.artifact.id>geoserver</geoserver.artifact.id>
        <geoserver.version>2.4.2.fetchsize</geoserver.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.geoserver</groupId>
            <artifactId>geoserver</artifactId>
            <version>2.4.2.fetchsize</version>
            <type>war</type>
        </dependency>

        <dependency>
            <groupId>org.geoserver</groupId>
            <artifactId>xslt</artifactId>
            <version>2.4.2</version>
            <scope>runtime</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>2.4</version>
                <configuration>
                    <overlays>
                        <overlay>
                            <groupId>${geoserver.group.id}</groupId>
                            <artifactId>${geoserver.artifact.id}</artifactId>
                        </overlay>
                    </overlays>
                    <warName>${geoserver.artifact.id}-${project.version}-fetchsize-nogzip</warName>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <distributionManagement>
        <repository>
            <id>${internal.repository.id}</id>
            <url>${internal.repository.url}</url>
        </repository>
    </distributionManagement>

</project>
